<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="15dp"
    android:background="@drawable/corner_white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按天包车"
            android:textColor="@color/textBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_accepted_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/time2"
            android:drawablePadding="5dp"
            android:text="今天12点"
            android:textColor="@color/textBlack"
            android:textSize="12sp" />

    </RelativeLayout>

    <include layout="@layout/line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_start_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/oval_yellow"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="出发地点："
                android:textColor="@color/textBlack"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableLeft="@mipmap/time"
                android:drawablePadding="@dimen/dp_10"
                android:text="出发时间："
                android:textColor="@color/textBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_chartered_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableLeft="@mipmap/time"
                android:drawablePadding="@dimen/dp_10"
                android:text="包车天数："
                android:textColor="@color/textBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableLeft="@mipmap/oval_yellow"
                android:drawablePadding="@dimen/dp_10"
                android:text="备用手机号："
                android:textColor="@color/textBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:drawableLeft="@mipmap/price"
                android:drawablePadding="@dimen/dp_10"
                android:text="价格："
                android:textColor="@color/textBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableLeft="@mipmap/order_id"
                android:drawablePadding="@dimen/dp_10"
                android:text="订单号："
                android:textColor="@color/textBlack"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:text="线路详情"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="8dp"
            android:textColor="@color/titleGreen"
            android:paddingLeft="8dp"
            android:background="@drawable/border_corner_code_green"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <include layout="@layout/line_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/phone"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="联系乘客"
                android:textColor="@color/textBlack"
                android:textSize="13sp" />

        </RelativeLayout>

        <include layout="@layout/line_v" />

        <RelativeLayout
            android:id="@+id/rl_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_action_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/icon_order"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="我要接单"
                android:textColor="@color/textBlack"
                android:textSize="13sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

